{
    "manifest_version": 3,
    "name": "PhishEye URL Scanner",
    "version": "1.0",
    "description": "Quickly scan the current tab's URL for phishing threats using PhishEye backend.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "24" : "icons/icon24.png",
            "32": "icons/icon32.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*"
    ]
}